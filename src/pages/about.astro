---
import Layout from '../layouts/Layout.astro';
import { getPage } from '../lib/prismic';
import { asText } from '@prismicio/helpers';

const page = await getPage('about');

// Add fallback content in case the page isn't found
const title = page ? asText(page.data.title) : 'About';
const content = page ? asText(page.data.content) : 'Content coming soon...';
---

<Layout title="About - Visual Story">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">{title}</h1>
    <div class="prose mx-auto">
      {content}
    </div>
  </main>
</Layout>