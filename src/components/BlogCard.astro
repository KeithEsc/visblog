---
interface Props {
  title: string;
  image: string;
  excerpt: string;
  date: string;
  slug: string;
}

const { title, image, excerpt, date, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <time class="text-sm text-gray-500">{date}</time>
    <h2 class="text-xl font-semibold mt-2">
      <a href={`/blog/${slug}`} class="hover:text-blue-600 transition-colors">
        {title}
      </a>
    </h2>
    <p class="mt-2 text-gray-600">{excerpt}</p>
  </div>
</article>